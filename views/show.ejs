<%- include('partials/head'); -%>
<main id="show">
  <%- include('partials/nav'); -%>
  <div class="block">
    <% if (embed) { %>
      <a href="<%= source.url %>"><img src="<%= image.large.url %>" /></a>
    <% } else if (content) {%>
      <div class="content-show">
        <%- content_html %>
      </div>
    <% } else { %>
      <img src="<%= image.large.url %>" />
    <% } %>
  </div>
  <div class="block-metadata">
    <h2 class="block-metadata-title"><%= title %></h2>
    <% if (description_html) { %>
      <div class="block-metadata-description">
        <%- description_html %>
      </div>
    <% } %>
    <%- include('partials/lists/connections'); -%>
    <% if (source) { %>
      <div class="block-metadata-source">
        <i>source: </i><a class="external-link" href="<%= source.url %>"><%= source.title %></a>
      </div>
    <% } %>
  </div>
</main>
<%- include('partials/footer'); -%>
