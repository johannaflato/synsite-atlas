<%- include('partials/header'); -%>
<main id="show">
  <h1 class="page-title">
    <%= title %>
  </h1>
  <div class="block">
    <% if (image) { %>
      <img src="<%= image.large.url %>" />
    <% } %>
    <%# special section for text %>
    <% if (content) { %>
      <div class="block-content-clicked">
        <%- content_html %>
      </div>
    <% } %>
  </div>
  <div class="block-metadata">
    <div class="block-metadata-title"><%= title %></div>
    <% if (description_html) { %>
      <div class="block-metadata-description">
        <%- description_html %>
      </div>
    <% } %>
    <% if (source) { %>
      <div class="block-metadata-source">
        Source: <a href="<%= source.url %>"><%= source.title %></a>
      </div>
    <% } %>
  </div>
</main>
<%- include('partials/footer'); -%>
